@model IEnumerable<baithi.Models.ViewSanPham>

@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <p class="box-search">
        @Html.TextBox("SearchString") <input type="submit" value="Tìm kiếm" />
    </p>
}

<table class="table">
    <tr>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Size
        </th>
        <th>
            Loại
        </th>
        <th>
            Hãng
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Giá thành
        </th>
        <th>
            Ảnh
        </th>
        <th>
            Tên kho
        </th>
        <th>
            Mô tả
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.tensp)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.size)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenLoai)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenHang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.soluong)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.giathanh)
    </td>
    <td>
        <img src="Images/@item.anh" style="width:60px;" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenKho)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.mota)
    </td>
    <td>
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.IDsp }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.IDsp })
    </td>
</tr>
    }

</table>
<p class="create">
    @Html.ActionLink("Tạo sản phẩm mới", "Create")
</p>