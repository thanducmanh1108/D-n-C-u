@model IEnumerable<baithi.Models.kh_hang>

@{
    ViewBag.Title = "Khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table">
    <tr>
        <th>
            Tên khách hàng
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Địa chỉ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tenkhachhang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sdt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.diachi)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.IDkhachhang }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.IDkhachhang })
        </td>
    </tr>
}

</table>
<p class="create">
    @Html.ActionLink("Tạo khách hàng mới", "Create")
</p>