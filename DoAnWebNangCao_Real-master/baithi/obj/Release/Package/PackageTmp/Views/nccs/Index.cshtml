@model IEnumerable<baithi.Models.ncc>

@{
    ViewBag.Title = "Nhà cung cấp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table">
    <tr>
        <th>
            Tên nhà cung cấp
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Địa chỉ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tenncc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sdt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.diachi)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.IDncc }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.IDncc })
        </td>
    </tr>
}

</table>
<p class="create">
    @Html.ActionLink("Tạo nhà cung cấp mới", "Create")
</p>