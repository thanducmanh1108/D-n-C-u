@model IEnumerable<baithi.Models.hoadonsp>

@{
    ViewBag.Title = "Hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <p class="box-search">
        @Html.TextBox("SearchString") <input type="submit" value="Tìm kiếm" />
    </p>
}

<p class="create" style="text-align:left">
    @Html.ActionLink("Thêm hóa đơn mới", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Mã khách hàng
        </th>
        <th>
            Ngày bán
        </th>
        <th>
            Tổng tiền
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDkhachhang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngayban)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tongtien)
            </td>
            <td class="custom-icon">
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDhoadon }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDhoadon })
            </td>
        </tr>
    }

</table>
