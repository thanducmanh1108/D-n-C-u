@model IEnumerable<baithi.Models.hang>

@{
    ViewBag.Title = "Hãng sản xuất";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <p class="box-search">
        @Html.TextBox("SearchString") <button type="submit" value="Tìm kiếm"><i class="fas fa-search"></i></button>
    </p>
}
<p class="create" style="text-align:left">
    @Html.ActionLink("Thêm hãng mới", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Tên hãng
        </th>
        <th>
            Xuất xứ
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tenhang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.xuatxu)
            </td>
            <td class="custom-icon">
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDhang }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDhang })
            </td>
        </tr>
    }

</table>
