@model IEnumerable<baithi.Models.khohang>

@{
    ViewBag.Title = "Kho sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="create" style="text-align:left">
    @Html.ActionLink("Thêm kho mới", "Create")
</p>


<table class="table">
    <tr>
        <th>
            Tên kho
        </th>
        <th>
            Địa chỉ kho
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tenkho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diachi)
            </td>
            <td class="custom-icon">
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDkho }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDkho })
            </td>
        </tr>
    }

</table>